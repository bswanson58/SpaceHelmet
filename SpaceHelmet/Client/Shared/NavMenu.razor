@using MudBlazor
@using SpaceHelmet.Shared.Constants
@using Microsoft.AspNetCore.Components.Authorization

<MudNavMenu>
    <MudNavLink Href="/"
                Icon="@Icons.Material.Filled.Home"
                Match="NavLinkMatch.All">Home</MudNavLink>
    <AuthorizeView Roles=@ClaimValues.ClaimRoleUser>
        <Authorized>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles=@ClaimValues.ClaimRoleAdmin>
        <Authorized>
            <MudNavLink Href="@NavLinks.Users"
                        Icon="@Icons.Material.Filled.SupervisorAccount"
                        Match="NavLinkMatch.Prefix">Users</MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView Roles=@ClaimValues.ClaimRoleUser>
        <Authorized>
            <MudNavLink Href="@NavLinks.Account"
                        Icon="@Icons.Material.Filled.AccountCircle"
                        Match="NavLinkMatch.Prefix">Account</MudNavLink>
            <MudNavLink Href="@NavLinks.About"
                        Icon="@Icons.Material.Outlined.Info"
                        Match="NavLinkMatch.Prefix">About</MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>